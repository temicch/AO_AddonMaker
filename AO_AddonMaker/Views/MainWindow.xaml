<Window x:Class="AO_AddonMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AO_AddonMaker"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
        Title="AddonMaker" 
        MinHeight="720" 
        Height ="720" 
        MinWidth="800" 
        Width="1280" 
        FontSize="18" 
        FontFamily="Consolas" 
        WindowStartupLocation="CenterScreen" 
        Icon="/AO_AddonMaker;component/Icons/appIcon.png"  WindowStyle="ThreeDBorderWindow"
        Background="#FF2D2D30" ResizeMode="CanResizeWithGrip"
        >
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>

    </Window.Resources>
    <DockPanel Margin="0,5,0,0">
        <StackPanel DockPanel.Dock="Top" >
            <StackPanel Orientation="Horizontal">
                <Menu Height="20" Background="Transparent">
                    <MenuItem Header="Menu" Foreground="White"></MenuItem>
                    <MenuItem Header="About" Foreground="White"></MenuItem>
                    <MenuItem Header="Close" Foreground="White"></MenuItem>
                </Menu>
            </StackPanel>
            <WrapPanel Height="25">
                <Button Background="Transparent" BorderThickness="1" Command="{Binding openFile}">
                    <Image Source="/AO_AddonMaker;component/Icons/openFile.png"/>
                </Button>
            </WrapPanel>
        </StackPanel>
        <Grid ShowGridLines="false" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="300" MinWidth="80"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="5"></RowDefinition>
                    <RowDefinition Height="200" MinHeight="30"></RowDefinition>
                </Grid.RowDefinitions>
                <TabControl Grid.Row="0" Background="Transparent" BorderThickness="1" Style="{StaticResource Border}">
                    <TabItem Header="Пустой проект">
                        <Canvas/>
                    </TabItem>
                </TabControl>
                <GridSplitter Grid.Row="1" Background="Transparent" HorizontalAlignment="Stretch" />
                <Border Grid.Row="2"  Style="{StaticResource Border}" Margin="5,0,0,1">
                    <DockPanel LastChildFill="True">
                        <Label DockPanel.Dock="Top" Content="Список проблем" Style="{StaticResource BorderLabel}"/>

                        <TextBox x:Name="tboxDebug" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Background="#FF252526" Padding="5" IsReadOnly="True" BorderThickness="0" Text="{Binding DebugOutput}" Foreground="White" FontSize="12"/>

                    </DockPanel>
                </Border>
            </Grid>
            <GridSplitter ShowsPreview="true" Grid.Column="1" HorizontalAlignment="Stretch" Background="Transparent" />
            <Grid Grid.Column="2" Margin="0,2,0,0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="30"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*" MinHeight="30"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*" MinHeight="30"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Style="{StaticResource Border}">
                    <DockPanel LastChildFill="True">
                        <Label DockPanel.Dock="Top" Content="Иерархия объектов" Style="{StaticResource BorderLabel}"/>
                        <TreeView Background="#FF252526"  BorderThickness="0" HorizontalContentAlignment="Stretch"/>
                        <StackPanel Height="20" Orientation="Horizontal">
                            <Image Height="16" Source="/AO_AddonMaker;component/Icons/openFile.png"/>
                            <Label Content="fds" Foreground="White" FontSize="10" Margin="3 0 0 0" VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </DockPanel>
                </Border>
                <GridSplitter Grid.Row="1" Background="Transparent" HorizontalAlignment="Stretch" />
                <Border Grid.Row="2" Style="{StaticResource Border}">
                    <DockPanel LastChildFill="True">
                        <Label DockPanel.Dock="Top" Content="Объекты" Style="{StaticResource BorderLabel}"/>
                        <TreeView Background="#FF252526" BorderThickness="0" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"/>
                    </DockPanel>
                </Border>
                <GridSplitter Grid.Row="3" Background="Transparent" HorizontalAlignment="Stretch" />
                <Border Grid.Row="4" Style="{StaticResource Border}">
                    <DockPanel LastChildFill="True">
                        <Label DockPanel.Dock="Top" Content="Свойства" Style="{StaticResource BorderLabel}" Foreground="#FFD0D0B9"/>
                        <TreeView Background="#FF252526" BorderThickness="0" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"/>
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
